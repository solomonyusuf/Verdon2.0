@page "/ai-search"
@model Verdon.Pages.Components.Tutor.AISearchModel
@{
    Layout = "_MainLayout";
    const int key = 1;
}

@if (Model.Tutor.Count() == 0)
{
    <div class="card">
        <div class="card-body">
            <div class="card-title d-flex align-items-start">
                <img align="center" src="~/blank.png" style="height:100px;" />
            </div>
        </div>
    </div>
}
@if (Model.Tutor.Count() > 0)
{

        <div class="card">
        <h5 class="card-header"> @Model.Tutor.Count() Results</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.Tutor)
                        {
                            <tr>
                                <th scope="row">@key++</th>
                                <td><img src="@data.Image" style="height:30px;border-radius:15px;"/>
                                    &nbsp;@data.FirstName&nbsp;@data.LastName</td>
                                <td>@data.Email</td>
                            </tr>

                        }
                       

                    </tbody>
                </table>
            </div>
        </div>
       

}

