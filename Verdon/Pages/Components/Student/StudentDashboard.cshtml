@page "/student-dashboard"
@model Verdon.Pages.Components.Student.StudentDashboardModel
@{
    Layout = "_MainLayout";
}
<div class="row">
    <div class="col-md-12 mb-4">
        <div class="row mb-4">
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-user"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt4"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                                    <a class="dropdown-item" href="/student-peers">View More</a>
                                </div>
                            </div>
                        </div>
                        <span class="d-block mb-1">Peers</span>
                        <h3 class="card-title text-nowrap mb-2">@Model.students.Count()</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.students.Where(x=> x.DateTime.AddDays(3) > DateTime.Now).Count()</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-task"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt1"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="cardOpt1">
                                    <a class="dropdown-item" href="/student-assignments">View More</a>
                                </div>
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Assignments</span>
                        <h3 class="card-title mb-2">@Model.assignment.Count()</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.assignment.Where(x=> x.DateTime.AddDays(3) > DateTime.Now).Count() </small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-message-square-dots"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt3"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                    <a class="dropdown-item" href="/student-quiz">View More</a>
                                </div>
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Quiz</span>
                        <h3 class="card-title mb-2">@Model.quiz.Count()</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.quiz.Where(x=> x.DateTime.AddDays(3) > DateTime.Now).Count()</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-group"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt6"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
                                    <a class="dropdown-item" href="/student-lectures">View More</a>
                                </div>
                            </div>
                        </div>
                        <span>Lectures</span>
                        <h3 class="card-title text-nowrap mb-1">@Model.lectures.Count()</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.lectures.Where(x=> x.DateTime.AddDays(3) > DateTime.Now).Count()</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-detail"></i>
                            </div>

                        </div>
                        <span class="d-block mb-1">Reviews</span>
                        <h3 class="card-title text-nowrap mb-2">@Model.reviews.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-message-rounded-dots"></i>
                            </div>

                        </div>
                        <span class="fw-semibold d-block mb-1">Announcement</span>
                        <h3 class="card-title mb-2">@Model.announcements.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-book"></i>
                            </div>

                        </div>
                        <span class="fw-semibold d-block mb-1">Libary</span>
                        <h3 class="card-title mb-2">@Model.libary.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <i class="menu-icon tf-icons bx bx-pencil"></i>
                            </div>

                        </div>
                        <span>Quiz Attempts</span>
                        <h3 class="card-title text-nowrap mb-1">@Model.Result</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>